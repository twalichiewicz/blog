<%# Wireframe Evolution Component - Usage: <%- include('components/ux-artifacts/wireframe-evolution', { evolution: {...} }) %> %>

<div class="ux-artifact wireframe-evolution">
  <div class="artifact-header">
    <div class="artifact-icon">üìê</div>
    <h3 class="artifact-title"><%= evolution.title || 'Design Evolution' %></h3>
  </div>
  
  <div class="evolution-container">
    <% evolution.iterations.forEach(function(iteration, index) { %>
      <div class="iteration-step" data-iteration="<%= index + 1 %>">
        <div class="iteration-header">
          <div class="iteration-number">v<%= index + 1 %></div>
          <div class="iteration-info">
            <h4 class="iteration-title"><%= iteration.title %></h4>
            <% if (iteration.date) { %>
              <div class="iteration-date"><%= iteration.date %></div>
            <% } %>
          </div>
        </div>
        
        <div class="iteration-content">
          <% if (iteration.image) { %>
            <div class="wireframe-image">
              <img src="<%= iteration.image %>" alt="<%= iteration.title %> wireframe" />
            </div>
          <% } %>
          
          <div class="iteration-details">
            <% if (iteration.description) { %>
              <p class="iteration-description"><%= iteration.description %></p>
            <% } %>
            
            <% if (iteration.changes) { %>
              <div class="iteration-changes">
                <h5>Key Changes:</h5>
                <ul>
                  <% iteration.changes.forEach(function(change) { %>
                    <li><%= change %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
            
            <% if (iteration.rationale) { %>
              <div class="iteration-rationale">
                <h5>Rationale:</h5>
                <p><%= iteration.rationale %></p>
              </div>
            <% } %>
            
            <% if (iteration.feedback) { %>
              <div class="iteration-feedback">
                <h5>Feedback Addressed:</h5>
                <ul>
                  <% iteration.feedback.forEach(function(fb) { %>
                    <li>"<%= fb %>"</li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <% if (index < evolution.iterations.length - 1) { %>
        <div class="evolution-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-head">‚Üì</div>
        </div>
      <% } %>
    <% }); %>
  </div>
  
  <% if (evolution.final_outcome) { %>
    <div class="evolution-outcome">
      <h4>Final Outcome</h4>
      <p><%= evolution.final_outcome %></p>
    </div>
  <% } %>
</div>