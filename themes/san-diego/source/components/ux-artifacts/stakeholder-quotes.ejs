<%# Stakeholder Quotes Component - Usage: <%- include('components/ux-artifacts/stakeholder-quotes', { quotes: [...] }) %> %>

<div class="ux-artifact stakeholder-quotes">
  <div class="artifact-header">
    <div class="artifact-icon">ðŸ’¬</div>
    <h3 class="artifact-title">Stakeholder Feedback</h3>
  </div>
  
  <div class="quotes-container">
    <% quotes.forEach(function(quote, index) { %>
      <div class="quote-card" data-quote="<%= index + 1 %>">
        <div class="quote-content">
          <blockquote>
            "<%= quote.text %>"
          </blockquote>
        </div>
        <div class="quote-attribution">
          <div class="stakeholder-info">
            <% if (quote.avatar) { %>
              <img src="<%= quote.avatar %>" alt="<%= quote.name %>" class="stakeholder-avatar" />
            <% } else { %>
              <div class="stakeholder-avatar-placeholder">
                <%= quote.name.charAt(0).toUpperCase() %>
              </div>
            <% } %>
            <div class="stakeholder-details">
              <div class="stakeholder-name"><%= quote.name %></div>
              <div class="stakeholder-role"><%= quote.role %></div>
              <% if (quote.company) { %>
                <div class="stakeholder-company"><%= quote.company %></div>
              <% } %>
            </div>
          </div>
          <% if (quote.context) { %>
            <div class="quote-context">
              <strong>Context:</strong> <%= quote.context %>
            </div>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</div>