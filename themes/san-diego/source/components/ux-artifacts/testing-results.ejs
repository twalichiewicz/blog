<%# Testing Results Component - Usage: <%- include('components/ux-artifacts/testing-results', { testing: {...} }) %> %>

<div class="ux-artifact testing-results">
  <div class="artifact-header">
    <div class="artifact-icon">ðŸ§ª</div>
    <h3 class="artifact-title"><%= testing.title || 'Testing & Validation' %></h3>
  </div>
  
  <div class="testing-container">
    <% if (testing.methods) { %>
      <div class="testing-methods">
        <h4>Testing Methods</h4>
        <div class="methods-grid">
          <% testing.methods.forEach(function(method) { %>
            <div class="method-card">
              <div class="method-icon"><%= method.icon || 'ðŸ“Š' %></div>
              <div class="method-details">
                <h5><%= method.name %></h5>
                <p><%= method.description %></p>
                <% if (method.participants) { %>
                  <div class="method-meta">
                    <strong>Participants:</strong> <%= method.participants %>
                  </div>
                <% } %>
                <% if (method.duration) { %>
                  <div class="method-meta">
                    <strong>Duration:</strong> <%= method.duration %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
    
    <% if (testing.key_findings) { %>
      <div class="testing-findings">
        <h4>Key Findings</h4>
        <div class="findings-list">
          <% testing.key_findings.forEach(function(finding, index) { %>
            <div class="finding-item" data-finding="<%= index + 1 %>">
              <div class="finding-priority" data-priority="<%= finding.priority || 'medium' %>">
                <%= finding.priority || 'Medium' %>
              </div>
              <div class="finding-content">
                <h5><%= finding.title %></h5>
                <p><%= finding.description %></p>
                <% if (finding.evidence) { %>
                  <div class="finding-evidence">
                    <strong>Evidence:</strong> <%= finding.evidence %>
                  </div>
                <% } %>
                <% if (finding.action_taken) { %>
                  <div class="finding-action">
                    <strong>Action Taken:</strong> <%= finding.action_taken %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
    
    <% if (testing.metrics) { %>
      <div class="testing-metrics">
        <h4>Success Metrics</h4>
        <div class="metrics-grid">
          <% testing.metrics.forEach(function(metric) { %>
            <div class="metric-card" data-trend="<%= metric.trend || 'neutral' %>">
              <div class="metric-value">
                <span class="value-number"><%= metric.value %></span>
                <% if (metric.change) { %>
                  <span class="value-change" data-direction="<%= metric.change.direction %>">
                    <%= metric.change.amount %>
                  </span>
                <% } %>
              </div>
              <div class="metric-label"><%= metric.label %></div>
              <% if (metric.baseline) { %>
                <div class="metric-baseline">
                  Baseline: <%= metric.baseline %>
                </div>
              <% } %>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
    
    <% if (testing.iterations) { %>
      <div class="testing-iterations">
        <h4>Design Iterations</h4>
        <div class="iterations-timeline">
          <% testing.iterations.forEach(function(iteration, index) { %>
            <div class="iteration-item">
              <div class="iteration-marker">
                <div class="iteration-number"><%= index + 1 %></div>
              </div>
              <div class="iteration-content">
                <h5><%= iteration.title %></h5>
                <p><%= iteration.description %></p>
                <% if (iteration.changes) { %>
                  <div class="iteration-changes">
                    <strong>Changes Made:</strong>
                    <ul>
                      <% iteration.changes.forEach(function(change) { %>
                        <li><%= change %></li>
                      <% }); %>
                    </ul>
                  </div>
                <% } %>
                <% if (iteration.result) { %>
                  <div class="iteration-result">
                    <strong>Result:</strong> <%= iteration.result %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>
</div>