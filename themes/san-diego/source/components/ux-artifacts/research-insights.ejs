<%# Research Insights Component - Usage: <%- include('components/ux-artifacts/research-insights', { insights: [...] }) %> %>

<div class="ux-artifact research-insights">
  <div class="artifact-header">
    <div class="artifact-icon">üîç</div>
    <h3 class="artifact-title">Key Research Insights</h3>
  </div>
  
  <div class="insights-grid">
    <% insights.forEach(function(insight, index) { %>
      <div class="insight-card" data-insight="<%= index + 1 %>">
        <div class="insight-type"><%= insight.type %></div>
        <div class="insight-content">
          <h4><%= insight.title %></h4>
          <p><%= insight.description %></p>
          <% if (insight.quote) { %>
            <blockquote class="insight-quote">
              "<%= insight.quote %>"
              <% if (insight.source) { %>
                <cite>‚Äî <%= insight.source %></cite>
              <% } %>
            </blockquote>
          <% } %>
        </div>
        <% if (insight.impact) { %>
          <div class="insight-impact">
            <strong>Impact:</strong> <%= insight.impact %>
          </div>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>