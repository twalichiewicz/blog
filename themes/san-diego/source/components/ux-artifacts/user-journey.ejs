<%# User Journey Component - Usage: <%- include('components/ux-artifacts/user-journey', { journey: {...} }) %> %>

<div class="ux-artifact user-journey">
  <div class="artifact-header">
    <div class="artifact-icon">üó∫Ô∏è</div>
    <h3 class="artifact-title"><%= journey.title || 'User Journey' %></h3>
    <% if (journey.persona) { %>
      <div class="journey-persona">
        <strong>Persona:</strong> <%= journey.persona %>
      </div>
    <% } %>
  </div>
  
  <div class="journey-container">
    <div class="journey-phases">
      <% journey.phases.forEach(function(phase, index) { %>
        <div class="journey-phase" data-phase="<%= index + 1 %>">
          <div class="phase-header">
            <div class="phase-icon"><%= phase.icon || 'üìç' %></div>
            <h4 class="phase-title"><%= phase.title %></h4>
          </div>
          
          <div class="phase-details">
            <% if (phase.actions) { %>
              <div class="phase-section">
                <h5>Actions</h5>
                <ul>
                  <% phase.actions.forEach(function(action) { %>
                    <li><%= action %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
            
            <% if (phase.thoughts) { %>
              <div class="phase-section">
                <h5>Thoughts</h5>
                <ul>
                  <% phase.thoughts.forEach(function(thought) { %>
                    <li>"<%= thought %>"</li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
            
            <% if (phase.pain_points) { %>
              <div class="phase-section pain-points">
                <h5>Pain Points</h5>
                <ul>
                  <% phase.pain_points.forEach(function(pain) { %>
                    <li class="pain-point"><%= pain %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
            
            <% if (phase.opportunities) { %>
              <div class="phase-section opportunities">
                <h5>Opportunities</h5>
                <ul>
                  <% phase.opportunities.forEach(function(opp) { %>
                    <li class="opportunity"><%= opp %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>
          </div>
          
          <% if (phase.emotion) { %>
            <div class="emotion-indicator" data-emotion="<%= phase.emotion.level %>">
              <span class="emotion-icon"><%= phase.emotion.icon %></span>
              <span class="emotion-label"><%= phase.emotion.label %></span>
            </div>
          <% } %>
        </div>
        
        <% if (index < journey.phases.length - 1) { %>
          <div class="journey-connector">‚Üí</div>
        <% } %>
      <% }); %>
    </div>
  </div>
</div>