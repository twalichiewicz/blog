<%# Component Showcase - Usage: <%- include('components/ux-artifacts/component-showcase', { components: [...] }) %> %>

<div class="ux-artifact component-showcase">
  <div class="artifact-header">
    <div class="artifact-icon">ðŸ§©</div>
    <h3 class="artifact-title">Design System Components</h3>
  </div>
  
  <div class="components-grid">
    <% components.forEach(function(component, index) { %>
      <div class="component-card" data-component="<%= index + 1 %>">
        <div class="component-preview">
          <% if (component.image) { %>
            <img src="<%= component.image %>" alt="<%= component.name %> component" />
          <% } else { %>
            <div class="component-placeholder">
              <span class="component-icon"><%= component.icon || 'ðŸ”²' %></span>
            </div>
          <% } %>
        </div>
        
        <div class="component-details">
          <h4 class="component-name"><%= component.name %></h4>
          <p class="component-description"><%= component.description %></p>
          
          <% if (component.variants) { %>
            <div class="component-variants">
              <h5>Variants:</h5>
              <div class="variant-tags">
                <% component.variants.forEach(function(variant) { %>
                  <span class="variant-tag"><%= variant %></span>
                <% }); %>
              </div>
            </div>
          <% } %>
          
          <% if (component.usage_stats) { %>
            <div class="component-usage">
              <h5>Usage:</h5>
              <div class="usage-stats">
                <% Object.keys(component.usage_stats).forEach(function(key) { %>
                  <div class="usage-stat">
                    <span class="stat-value"><%= component.usage_stats[key] %></span>
                    <span class="stat-label"><%= key %></span>
                  </div>
                <% }); %>
              </div>
            </div>
          <% } %>
          
          <% if (component.guidelines) { %>
            <div class="component-guidelines">
              <h5>Key Guidelines:</h5>
              <ul>
                <% component.guidelines.forEach(function(guideline) { %>
                  <li><%= guideline %></li>
                <% }); %>
              </ul>
            </div>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</div>