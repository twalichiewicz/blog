/* ==========================================================================
   Wave Container - Consolidated Styles
   ========================================================================== */

.wave-container {
	/* Base positioning and layout */
	position: absolute;
	top: -30px;
	left: 0;
	right: 0;
	width: 100%;
	height: 300px;
	z-index: 0;

	/* Display and interaction */
	display: block;
	visibility: visible;
	pointer-events: none;
	overflow: hidden;
	box-sizing: border-box;

	/* Visual effects */
	opacity: 0.9;
	mask-image: linear-gradient(to bottom,
			rgba(0, 0, 0, 1) 0%,
			rgba(0, 0, 0, 0.9) 15%,
			rgba(0, 0, 0, 0.7) 25%,
			rgba(0, 0, 0, 0.4) 35%,
			rgba(0, 0, 0, 0) 100%);
	-webkit-mask-image: linear-gradient(to bottom,
			rgba(0, 0, 0, 1) 0%,
			rgba(0, 0, 0, 0.9) 15%,
			rgba(0, 0, 0, 0.7) 25%,
			rgba(0, 0, 0, 0.4) 35%,
			rgba(0, 0, 0, 0) 100%);

	/* Performance optimizations */
	will-change: transform, opacity;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

	/* Prevent layout issues */
	max-width: 100vw;
	margin: 0;
	padding: 0;

	/* Canvas styling */
	canvas {
		width: 100%;
		height: 100%;
		display: block;
	}

	/* Wave grid layout */
	.wave-grid {
		position: relative;
		width: 100%;
		height: 100%;
		display: grid;
		overflow: visible;
	}

	/* Individual wave characters */
	.wave-char {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		font-size: 21px;
		line-height: 30px;
		font-weight: 600;
		will-change: transform, opacity;
		text-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
		transition: color 0.3s ease;
	}

	/* Desktop-specific adjustments */
	@media screen and (min-width: 1025px) {
		top: 0;
		height: 50%;
	}

	/* Mobile-specific adjustments - only override what's different */
	@media screen and (max-width: 768px) {
		height: 100%;
		top: 0;
		opacity: 0.8;
		will-change: opacity;
		/* Reduce performance impact on mobile */

		/* Smoother gradient for mobile */
		mask-image: linear-gradient(to bottom,
				rgba(0, 0, 0, 1) 0%,
				rgba(0, 0, 0, 0.9) 20%,
				rgba(0, 0, 0, 0.7) 40%,
				rgba(0, 0, 0, 0.4) 60%,
				rgba(0, 0, 0, 0) 80%);
		-webkit-mask-image: linear-gradient(to bottom,
				rgba(0, 0, 0, 1) 0%,
				rgba(0, 0, 0, 0.9) 20%,
				rgba(0, 0, 0, 0.7) 40%,
				rgba(0, 0, 0, 0.4) 60%,
				rgba(0, 0, 0, 0) 80%);

		/* Hardware acceleration for smoother performance */
		-webkit-transform: translateZ(0);
		transform: translateZ(0);

		.wave-grid {
			grid-template-columns: repeat(auto-fill, minmax(12px, 1fr));
		}

		.wave-char {
			font-size: 18px;
			line-height: 24px;
			will-change: none;
			/* Disable will-change on mobile for better performance */
		}
	}
}

/* Dark mode adjustments */
@media (prefers-color-scheme: dark) {
	.wave-container {
		opacity: 0.7;
	}
}

/* Accessibility: Respect user's motion preferences */
@media (prefers-reduced-motion: reduce) {
	.wave-container .wave-char {
		animation: none;
		opacity: 0.7;
	}
}