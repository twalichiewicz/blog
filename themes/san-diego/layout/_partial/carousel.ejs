<div class="carousel" aria-label="Media carousel">
  <% if (!images || images.length === 0) { %>
    <div class="carousel-empty">
      <p>No media content available</p>
    </div>
  <% } else { %>
    <div class="carousel-track">
      <% images.forEach((item, index) => { %>
        <div class="carousel-slide <%= index === 0 ? 'active' : '' %>" 
             aria-hidden="<%= index === 0 ? 'false' : 'true' %>">
          <% if (item.type === 'video') { %>
            <video controls preload="metadata" playsinline <%= item.autoplay ? 'autoplay' : '' %> <%= item.loop ? 'loop' : '' %> <%= item.muted ? 'muted' : '' %>>
              <source src="<%= item.url %>" type="<%= item.videoType || 'video/mp4' %>">
              Your browser does not support the video tag.
            </video>
          <% } else if (item.type === 'iframe') { %>
            <iframe src="<%= item.url %>" 
                    frameborder="0" 
                    allowfullscreen
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    loading="lazy"
                    style="width: 100%; height: 100%; border: none;"
                    title="<%= item.caption || 'Embedded content' %>">
            </iframe>
          <% } else { %>
            <img src="<%= item.url %>" 
                 alt="<%= item.caption || '' %>"
                 loading="lazy"
                 decoding="async">
          <% } %>
          <% if (item.caption) { %>
            <div class="carousel-caption"><%= item.caption %></div>
          <% } %>
        </div>
      <% }); %>
    </div>

    <% if (images.length > 1) { %>
      <div class="carousel-indicators">
        <button class="carousel-button prev" aria-label="Previous slide"></button>
        <% images.forEach((_, index) => { %>
          <button class="indicator <%= index === 0 ? 'active' : '' %>" 
                  aria-label="Go to slide <%= index + 1 %>"></button>
        <% }); %>
        <button class="carousel-button next" aria-label="Next slide"></button>
      </div>
    <% } %>
  <% } %>
</div>
