<%
    const contactLinks = (site && site.data && site.data.contact_links) || [];
%>
<!-- Contact Modal -->
<div id="contact-modal" class="contact-modal no-external-indicators" style="display: none;">
    <div class="contact-modal-backdrop" onclick="closeContactModal()"></div>
    <div class="contact-modal-sheet">
        <div class="contact-modal-header">
            <button class="contact-modal-close minimal-close" onclick="closeContactModal()" aria-label="Close contact">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M15 5L5 15M5 5l10 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
            </button>
            <div class="contact-modal-title">Get in touch</div>
        </div>
        <% if (contactLinks.length) { %>
            <div class="contact-modal-options">
                <% contactLinks.forEach((link) => {
                    const isExternal = Boolean(link.external);
                    const optionClasses = ['contact-option'];
                    if (link.modifier) {
                        optionClasses.push(link.modifier);
                    }
                %>
                    <a
                        href="<%= link.href %>"
                        class="<%= optionClasses.join(' ') %>"
                        aria-label="<%= link.aria_label || link.label %>"
                        <% if (isExternal) { %>target="_blank" rel="noopener"<% } %>
                    >
                        <span class="contact-icon" aria-hidden="true">
                            <%- partial('_partial/contact-icon', { icon: link.id, size: 48 }) %>
                        </span>
                        <span class="contact-label"><%= link.label %></span>
                        <% if (link.sublabel) { %>
                            <span class="contact-sublabel"><%= link.sublabel %></span>
                        <% } %>
                    </a>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>
