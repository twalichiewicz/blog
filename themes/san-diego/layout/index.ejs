<script>
// Simplified loading screen management
(function() {
	
	// Just show progress at 100% and hide after a delay
	var progressBar = document.getElementById('loadingProgress');
	if (progressBar) {
		// Animate to 100% quickly
		setTimeout(function() {
			progressBar.style.width = '100%';
			// Progress bar set to 100%
		}, 500);
	}
	
	// Simple hide function - remove loading screen, let CSS control layout
	function hideLoadingScreen() {
		var loadingScreen = document.querySelector('.loading-screen');
		if (loadingScreen) {
			loadingScreen.classList.add('hidden');
			// Remove from DOM after transition
			setTimeout(function() {
				if (loadingScreen && loadingScreen.parentNode) {
					loadingScreen.parentNode.removeChild(loadingScreen);
				}
			}, 300);
		}
		document.body.classList.add('loaded');
	}
	
		var loadingResolved = false;
		var tabsReady = false;
		
		function resolveLoading(reason) {
			if (loadingResolved) {
				return;
			}
			loadingResolved = true;
			hideLoadingScreen();
		}
		
		function handleTabsReady() {
			if (tabsReady) {
				return;
			}
			tabsReady = true;
			resolveLoading('tabs-ready');
		}
		
		if (document.body && document.body.classList.contains('tabs-initial-rendered')) {
			tabsReady = true;
			resolveLoading('tabs-ready-existing');
		} else {
			document.addEventListener('mobileTabs:initial-render', handleTabsReady, { once: true });
		}
		
		setTimeout(function() {
			if (!tabsReady) {
				tabsReady = true;
				resolveLoading('tabs-timeout');
			}
		}, 4000);
		
		// Additional immediate check for page refreshes or back navigation
		window.addEventListener('pageshow', function(event) {
			if (event.persisted || document.querySelector('.loading-screen')) {
				// Pageshow event - forcing loading screen removal
				resolveLoading('pageshow');
			}
		});
		
		// Check if we're coming from browser history
		if (window.performance && window.performance.navigation.type === 2) {
			// Page loaded from back/forward cache
			setTimeout(function() {
				resolveLoading('bfcache');
			}, 100);
		}
		
		// Simplified safety check - only ensure visibility, let CSS handle layout
		setTimeout(function() {
			// Just ensure elements are visible, don't override layout properties
			var blogContent = document.querySelector('.blog-content');
			if (blogContent) {
				blogContent.style.opacity = '1';
				blogContent.style.visibility = 'visible';
			}

			var blog = document.querySelector('.blog');
			if (blog) {
				blog.style.opacity = '1';
				blog.style.visibility = 'visible';
			}
		}, 2000);
	
	
	// Set up mutation observer to prevent loading screen from reappearing
	var observer = new MutationObserver(function(mutations) {
		mutations.forEach(function(mutation) {
			if (mutation.addedNodes) {
				mutation.addedNodes.forEach(function(node) {
					if (node.classList && node.classList.contains('loading-screen')) {
						// Loading screen was added to DOM, removing it immediately
						node.remove();
					}
				});
			}
		});
	});
	
	// Start observing once body is loaded
	observer.observe(document.body, {
		childList: true,
		subtree: true
	});
	
	// Also ensure loading screen is removed if it exists on load
	var existingLoadingScreen = document.querySelector('.loading-screen');
	if (existingLoadingScreen && window.performance.timing.loadEventEnd > 0) {
		// Page already loaded but loading screen exists, removing
		resolveLoading('existing-load-event');
	}
})();
</script>

