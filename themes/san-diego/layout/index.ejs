<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= config.title %><% if (config.subtitle) { %> | <%= config.subtitle %><% } %></title>
	<style>
		* { margin: 0; padding: 0; box-sizing: border-box; }
		body { overflow: hidden; }
		.loading-screen {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: #e4e1db;
			display: flex;
			align-items: center;
			justify-content: center;
			z-index: 99999;
			transition: opacity 0.3s ease-out;
		}
		
		/* Ensure main content is below loading screen initially */
		.blog {
			position: relative;
			z-index: 1;
		}
		
		@media (prefers-color-scheme: dark) {
			.loading-screen {
				background: hsl(40.1, 8.4%, 35.98%);
			}
		}
		
		.loading-container {
			position: relative;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 20px;
		}
		
		.loading-skull {
			width: 30px;
			height: 30px;
			max-width: 30px;
			max-height: 30px;
			border-radius: 0;
		}
		
		.loading-skull-dark {
			display: none;
		}
		
		@media (prefers-color-scheme: dark) {
			.loading-skull-light {
				display: none;
			}
			.loading-skull-dark {
				display: block;
			}
		}
		
		.progress-container {
			width: 100px;
			height: 4px;
			background: rgba(91, 88, 86, 0.2);
			border-radius: 2px;
			overflow: hidden;
			opacity: 0;
			animation: fadeInProgress 0.3s ease-out 0.2s forwards;
		}
		
		@media (prefers-color-scheme: dark) {
			.progress-container {
				background: rgba(228, 225, 219, 0.2);
			}
		}
		
		.progress-bar {
			height: 100%;
			background: #5b5856;
			border-radius: 2px;
			width: 0%;
			transition: width 0.3s ease-out;
		}
		
		@media (prefers-color-scheme: dark) {
			.progress-bar {
				background: #e4e1db;
			}
		}
		
		.loading-screen.hidden {
			opacity: 0 !important;
			pointer-events: none;
		}
		
		@keyframes fadeIn {
			from {
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}
		
		@keyframes fadeInProgress {
			from {
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}
		
		/* Hide content until loaded */
		body:not(.loaded) .blog {
			opacity: 0;
		}
		
		body:not(.loaded) .skip-navigation {
			opacity: 0;
		}
		
		body.loaded {
			overflow: auto;
		}
		
		body.loaded .blog {
			opacity: 1 !important;
			visibility: visible !important;
			display: flex !important;
			transition: opacity 0.5s ease-in;
		}
		
		body.loaded .skip-navigation {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
			transition: opacity 0.5s ease-in;
		}
		
		/* Ensure blog-content specifically is visible and scrollable */
		body.loaded .blog-content {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
			border-radius: 12px 0 0 0 !important;
		}
		
		/* Ensure blog-content is scrollable on desktop/tablet */
		@media (min-width: 769px) {
			.blog-content {
				height: calc(100vh - 12px) !important;
				overflow-y: auto !important;
				-webkit-overflow-scrolling: touch;
			}
		}
		
		/* Ensure all child elements are visible */
		body.loaded .blog * {
			visibility: visible !important;
		}
		
		/* Ensure content-inner-wrapper is visible */
		body.loaded .content-inner-wrapper {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
		}
		
		/* Ensure body is visible and scrollable */
		body {
			opacity: 1 !important;
			visibility: visible !important;
		}
		
		/* Ensure html and body can scroll */
		html, body {
			height: auto !important;
			overflow: visible !important;
		}
		
		/* Ensure main element uses proper flex layout */
		main.blog {
			display: flex !important;
			flex-direction: column;
		}
		
		/* Desktop/tablet layout */
		@media (min-width: 769px) {
			main.blog {
				flex-direction: row !important;
				height: 100vh !important;
				overflow: hidden !important;
			}
			
			.blog-header {
				flex-shrink: 0;
				width: 400px; /* Fixed width for header on desktop */
			}
			
			.blog-content {
				flex: 1;
				min-width: 0; /* Prevent flex item from overflowing */
			}
		}
	</style>
</head>
<body>
<div class="loading-screen">
    <div class="loading-container">
        <img src="/img/triglavis_light.svg" alt="Triglavis logo" class="loading-skull loading-skull-light" />
        <img src="/img/triglavis_dark.svg" alt="Triglavis logo" class="loading-skull loading-skull-dark" />
        <div class="progress-container">
            <div class="progress-bar" id="loadingProgress"></div>
        </div>
    </div>
</div>

<script>
// Simplified loading screen management
(function() {
	
	// Just show progress at 100% and hide after a delay
	var progressBar = document.getElementById('loadingProgress');
	if (progressBar) {
		// Animate to 100% quickly
		setTimeout(function() {
			progressBar.style.width = '100%';
			// Progress bar set to 100%
		}, 500);
	}
	
	// Simple hide function
	function hideLoadingScreen() {
		// Hide loading screen
		var loadingScreen = document.querySelector('.loading-screen');
		if (loadingScreen) {
			// Force hide with inline styles first, then remove
			loadingScreen.style.display = 'none';
			loadingScreen.style.opacity = '0';
			loadingScreen.style.visibility = 'hidden';
			loadingScreen.style.pointerEvents = 'none';
			loadingScreen.style.position = 'absolute';
			loadingScreen.style.left = '-9999px';
			
			// Remove from DOM after a short delay
			setTimeout(function() {
				if (loadingScreen && loadingScreen.parentNode) {
					loadingScreen.parentNode.removeChild(loadingScreen);
					// Loading screen removed from DOM
				}
			}, 100);
		}
		document.body.classList.add('loaded');
		
		// CRITICAL: Ensure body and html are scrollable
		document.body.style.overflow = 'auto';
		document.body.style.height = 'auto';
		document.documentElement.style.overflow = 'auto';
		document.documentElement.style.height = 'auto';
		
		// Debug: Check what's happening with blog-content
		var blogContent = document.querySelector('.blog-content');
		if (blogContent) {
			// blog-content found
			// Check computed styles before fix
			
			// Force it visible with highest specificity, preserving border-radius
			blogContent.setAttribute('style', 'opacity: 1 !important; visibility: visible !important; border-radius: 12px 0 0 0 !important;');
			
			// Styles applied
		} else {
			// blog-content not found
		}
		
		// Also check content-inner-wrapper
		var contentInner = document.querySelector('.content-inner-wrapper');
		if (contentInner) {
			// content-inner-wrapper found
			contentInner.setAttribute('style', 'opacity: 1 !important; visibility: visible !important;');
		}
		
		// Check all children
		var blogChildren = document.querySelectorAll('.blog-content > *');
		// Check blog-content children
	}
	
	// Hide after 1.5 seconds
	setTimeout(hideLoadingScreen, 1500);
	
	// Additional immediate check for page refreshes or back navigation
	window.addEventListener('pageshow', function(event) {
		if (event.persisted || document.querySelector('.loading-screen')) {
			// Pageshow event - forcing loading screen removal
			hideLoadingScreen();
		}
	});
	
	// Check if we're coming from browser history
	if (window.performance && window.performance.navigation.type === 2) {
		// Page loaded from back/forward cache
		setTimeout(hideLoadingScreen, 100);
	}
	
	// Extra safety check after 2 seconds
	setTimeout(function() {
		// 2-second safety check
		// Force blog-content visible again
		var blogContent = document.querySelector('.blog-content');
		if (blogContent) {
			// Remove ALL inline styles and re-apply visibility
			blogContent.removeAttribute('style');
			
			// Check if we're on desktop/tablet
			var isDesktop = window.innerWidth > 768;
			if (isDesktop) {
				// Ensure proper height calculation and scrolling for desktop
				blogContent.style.cssText = 'opacity: 1 !important; visibility: visible !important; display: block !important; height: calc(100vh - 12px) !important; overflow-y: auto !important; -webkit-overflow-scrolling: touch !important; border-radius: 12px 0 0 0 !important;';
				
				// Also ensure the content-inner-wrapper doesn't interfere with scrolling
				var innerWrapper = blogContent.querySelector('.content-inner-wrapper');
				if (innerWrapper) {
					innerWrapper.style.minHeight = '100%';
					// Preserve border-radius on inner wrapper too
					innerWrapper.style.borderRadius = '12px 0 0 0';
				}
			} else {
				// Mobile styles
				blogContent.style.cssText = 'opacity: 1 !important; visibility: visible !important; display: block !important; height: auto !important; overflow: visible !important; border-radius: 12px 0 0 0 !important;';
			}
			
			// Check actual computed height
			var computedHeight = window.getComputedStyle(blogContent).height;
			// Check blog-content computed height
			
			// If height is 0 or very small, force a minimum height
			if (parseInt(computedHeight) < 100) {
				// blog-content height too small, forcing minimum height
				blogContent.style.minHeight = '500px';
			}
			
			// Do the same for all children
			var allChildren = blogContent.querySelectorAll('*');
			allChildren.forEach(function(child) {
				if (child.style.opacity === '0' || child.style.visibility === 'hidden') {
					child.style.opacity = '1';
					child.style.visibility = 'visible';
				}
			});
		}
		
		// Also ensure blog has no hiding styles
		var blog = document.querySelector('.blog');
		if (blog) {
			blog.style.opacity = '1';
			blog.style.visibility = 'visible';
			
			// Check blog dimensions
			var blogHeight = window.getComputedStyle(blog).height;
			// Check blog element height
		}
		
		// Final check - ensure blog-header isn't taking all the space
		var blogHeader = document.querySelector('.blog-header');
		if (blogHeader) {
			var headerHeight = window.getComputedStyle(blogHeader).height;
			// Check blog-header height
			
			// If header is taking full viewport, fix it
			if (parseInt(headerHeight) >= window.innerHeight - 50) {
				// blog-header taking too much space, adjusting
				blogHeader.style.height = '50vh';
			}
		}
	}, 2000);
	
	
	// Set up mutation observer to prevent loading screen from reappearing
	var observer = new MutationObserver(function(mutations) {
		mutations.forEach(function(mutation) {
			if (mutation.addedNodes) {
				mutation.addedNodes.forEach(function(node) {
					if (node.classList && node.classList.contains('loading-screen')) {
						// Loading screen was added to DOM, removing it immediately
						node.remove();
					}
				});
			}
		});
	});
	
	// Start observing once body is loaded
	observer.observe(document.body, {
		childList: true,
		subtree: true
	});
	
	// Also ensure loading screen is removed if it exists on load
	var existingLoadingScreen = document.querySelector('.loading-screen');
	if (existingLoadingScreen && window.performance.timing.loadEventEnd > 0) {
		// Page already loaded but loading screen exists, removing
		hideLoadingScreen();
	}
})();
</script>

