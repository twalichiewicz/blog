<div class="loading-screen">
    <div class="loading-container">
        <img src="/img/triglavis_light.svg" alt="Triglavis logo" class="loading-skull loading-skull-light" />
        <img src="/img/triglavis_dark.svg" alt="Triglavis logo" class="loading-skull loading-skull-dark" />
        <div class="progress-container">
            <div class="progress-bar" id="loadingProgress"></div>
        </div>
    </div>
</div>

<script>
// Make loading screen visible immediately
(function() {
	var loadingScreen = document.querySelector('.loading-screen');
	if (loadingScreen) {
		loadingScreen.style.display = 'flex';
		console.log('Loading screen made visible');
		
		// Store reference globally for easier access
		window._loadingScreen = loadingScreen;
	}
	
	// Enhanced progress tracking
	var progress = 0;
	var progressBar = document.getElementById('loadingProgress');
	var isProgressComplete = false;
	
	// Track different loading stages
	var stages = {
		dom: false,      // DOM ready
		resources: false, // Resources loaded
		complete: false  // Window load complete
	};
	
	// Make stages and updateProgress globally accessible
	window.stages = stages;
	
	function updateProgress() {
		if (isProgressComplete) return;
		
		var newProgress = 0;
		
		// Calculate progress based on stages
		if (stages.dom) newProgress += 30;
		if (stages.resources) newProgress += 50;
		if (stages.complete) newProgress = 100;
		
		// Smooth progress increase - never decrease
		if (newProgress > progress) {
			progress = newProgress;
			if (progressBar) {
				progressBar.style.width = progress + '%';
				console.log('Progress updated to:', progress + '%');
			}
		}
		
		if (progress >= 100) {
			isProgressComplete = true;
		}
	}
	
	// Make updateProgress globally accessible
	window.updateProgress = updateProgress;
	
	// Track DOM ready state
	function checkDOMReady() {
		if (document.readyState === 'interactive' || document.readyState === 'complete') {
			stages.dom = true;
			updateProgress();
		}
	}
	
	// Track resource loading completion
	function checkResourcesReady() {
		var images = document.querySelectorAll('img');
		var stylesheets = document.querySelectorAll('link[rel="stylesheet"]');
		var scripts = document.querySelectorAll('script[src]');
		
		var totalResources = images.length + stylesheets.length + scripts.length;
		var loadedResources = 0;
		
		// Count loaded images
		images.forEach(function(img) {
			if (img.complete) loadedResources++;
		});
		
		// For stylesheets and scripts, assume they're loaded if we can access them
		loadedResources += stylesheets.length + scripts.length;
		
		// Mark resources as ready when most are loaded
		if (totalResources === 0 || loadedResources >= totalResources * 0.8) {
			stages.resources = true;
			updateProgress();
		}
	}
	
	// Initial check
	checkDOMReady();
	
	// Listen for DOM state changes
	document.addEventListener('readystatechange', function() {
		console.log('ReadyState changed to:', document.readyState);
		checkDOMReady();
		if (document.readyState === 'complete') {
			checkResourcesReady();
		}
	});
	
	// Set up periodic checking for resources
	var resourceCheckInterval = setInterval(function() {
		if (!stages.resources) {
			checkResourcesReady();
		} else {
			clearInterval(resourceCheckInterval);
		}
	}, 100);
})();
</script>

