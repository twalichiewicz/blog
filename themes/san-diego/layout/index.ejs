<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= config.title %><% if (config.subtitle) { %> | <%= config.subtitle %><% } %></title>
	<style>
		* { margin: 0; padding: 0; box-sizing: border-box; }
		body { overflow: hidden; }
		.loading-screen {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: #e4e1db;
			display: flex;
			align-items: center;
			justify-content: center;
			z-index: 99999;
			transition: opacity 0.3s ease-out;
		}
		
		/* Ensure main content is below loading screen initially */
		.blog {
			position: relative;
			z-index: 1;
		}
		
		@media (prefers-color-scheme: dark) {
			.loading-screen {
				background: hsl(40.1, 8.4%, 35.98%);
			}
		}
		
		.loading-container {
			position: relative;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 20px;
		}
		
		.loading-skull {
			width: 30px;
			height: 30px;
			max-width: 30px;
			max-height: 30px;
			border-radius: 0;
		}
		
		.loading-skull-dark {
			display: none;
		}
		
		@media (prefers-color-scheme: dark) {
			.loading-skull-light {
				display: none;
			}
			.loading-skull-dark {
				display: block;
			}
		}
		
		.progress-container {
			width: 100px;
			height: 4px;
			background: rgba(91, 88, 86, 0.2);
			border-radius: 2px;
			overflow: hidden;
			opacity: 0;
			animation: fadeInProgress 0.3s ease-out 0.2s forwards;
		}
		
		@media (prefers-color-scheme: dark) {
			.progress-container {
				background: rgba(228, 225, 219, 0.2);
			}
		}
		
		.progress-bar {
			height: 100%;
			background: #5b5856;
			border-radius: 2px;
			width: 0%;
			transition: width 0.3s ease-out;
		}
		
		@media (prefers-color-scheme: dark) {
			.progress-bar {
				background: #e4e1db;
			}
		}
		
		.loading-screen.hidden {
			opacity: 0 !important;
			pointer-events: none;
		}
		
		@keyframes fadeIn {
			from {
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}
		
		@keyframes fadeInProgress {
			from {
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}
		
		/* Hide content until loaded */
		body:not(.loaded) .blog {
			opacity: 0;
		}
		
		body:not(.loaded) .skip-navigation {
			opacity: 0;
		}
		
		body.loaded {
			overflow: auto;
		}
		
		body.loaded .blog,
		body.loaded .skip-navigation {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
			transition: opacity 0.5s ease-in;
		}
		
		/* Ensure blog-content specifically is visible */
		body.loaded .blog-content {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
		}
		
		/* Ensure all child elements are visible */
		body.loaded .blog * {
			visibility: visible !important;
		}
		
		/* Ensure content-inner-wrapper is visible */
		body.loaded .content-inner-wrapper {
			opacity: 1 !important;
			visibility: visible !important;
			display: block !important;
		}
		
		/* Ensure body is visible and scrollable */
		body {
			opacity: 1 !important;
			visibility: visible !important;
		}
		
		/* Ensure html and body can scroll */
		html, body {
			height: auto !important;
			overflow: visible !important;
		}
		
		/* Ensure main element doesn't restrict height */
		main.blog {
			height: auto !important;
			min-height: 100vh;
		}
	</style>
</head>
<body>
<div class="loading-screen">
    <div class="loading-container">
        <img src="/img/triglavis_light.svg" alt="Triglavis logo" class="loading-skull loading-skull-light" />
        <img src="/img/triglavis_dark.svg" alt="Triglavis logo" class="loading-skull loading-skull-dark" />
        <div class="progress-container">
            <div class="progress-bar" id="loadingProgress"></div>
        </div>
    </div>
</div>

<script>
// Simplified loading screen management
(function() {
	console.log('Loading screen script starting...');
	
	// Just show progress at 100% and hide after a delay
	var progressBar = document.getElementById('loadingProgress');
	if (progressBar) {
		// Animate to 100% quickly
		setTimeout(function() {
			progressBar.style.width = '100%';
			console.log('Progress bar set to 100%');
		}, 500);
	}
	
	// Simple hide function
	function hideLoadingScreen() {
		console.log('Simple hide loading screen called');
		var loadingScreen = document.querySelector('.loading-screen');
		if (loadingScreen) {
			loadingScreen.remove();
			console.log('Loading screen removed');
		}
		document.body.classList.add('loaded');
		
		// CRITICAL: Ensure body and html are scrollable
		document.body.style.overflow = 'auto';
		document.body.style.height = 'auto';
		document.documentElement.style.overflow = 'auto';
		document.documentElement.style.height = 'auto';
		
		// Debug: Check what's happening with blog-content
		var blogContent = document.querySelector('.blog-content');
		if (blogContent) {
			console.log('blog-content found');
			console.log('Computed styles before fix:', {
				opacity: window.getComputedStyle(blogContent).opacity,
				visibility: window.getComputedStyle(blogContent).visibility,
				display: window.getComputedStyle(blogContent).display,
				height: window.getComputedStyle(blogContent).height
			});
			
			// Force it visible with highest specificity
			blogContent.setAttribute('style', 'opacity: 1 !important; visibility: visible !important; display: block !important;');
			
			console.log('Computed styles after fix:', {
				opacity: window.getComputedStyle(blogContent).opacity,
				visibility: window.getComputedStyle(blogContent).visibility,
				display: window.getComputedStyle(blogContent).display,
				height: window.getComputedStyle(blogContent).height
			});
		} else {
			console.error('blog-content not found!');
		}
		
		// Also check content-inner-wrapper
		var contentInner = document.querySelector('.content-inner-wrapper');
		if (contentInner) {
			console.log('content-inner-wrapper found');
			contentInner.setAttribute('style', 'opacity: 1 !important; visibility: visible !important; display: block !important;');
		}
		
		// Check all children
		var blogChildren = document.querySelectorAll('.blog-content > *');
		console.log('blog-content children count:', blogChildren.length);
		blogChildren.forEach(function(child, index) {
			console.log('Child ' + index + ':', child.className, {
				opacity: window.getComputedStyle(child).opacity,
				visibility: window.getComputedStyle(child).visibility,
				display: window.getComputedStyle(child).display
			});
		});
	}
	
	// Hide after 1.5 seconds
	setTimeout(hideLoadingScreen, 1500);
	
	// Extra safety check after 2 seconds
	setTimeout(function() {
		console.log('2-second safety check');
		// Force blog-content visible again
		var blogContent = document.querySelector('.blog-content');
		if (blogContent) {
			// Remove ALL inline styles and re-apply visibility
			blogContent.removeAttribute('style');
			
			// Check if we're on desktop/tablet
			var isDesktop = window.innerWidth > 768;
			if (isDesktop) {
				// Ensure proper height calculation for desktop
				blogContent.style.cssText = 'opacity: 1 !important; visibility: visible !important; display: block !important; height: calc(100vh - 12px) !important; overflow-y: auto !important;';
			} else {
				// Mobile styles
				blogContent.style.cssText = 'opacity: 1 !important; visibility: visible !important; display: block !important; height: auto !important; overflow: visible !important;';
			}
			
			// Check actual computed height
			var computedHeight = window.getComputedStyle(blogContent).height;
			console.log('blog-content computed height:', computedHeight);
			
			// If height is 0 or very small, force a minimum height
			if (parseInt(computedHeight) < 100) {
				console.log('blog-content height too small, forcing minimum height');
				blogContent.style.minHeight = '500px';
			}
			
			// Do the same for all children
			var allChildren = blogContent.querySelectorAll('*');
			allChildren.forEach(function(child) {
				if (child.style.opacity === '0' || child.style.visibility === 'hidden') {
					child.style.opacity = '1';
					child.style.visibility = 'visible';
				}
			});
		}
		
		// Also ensure blog has no hiding styles
		var blog = document.querySelector('.blog');
		if (blog) {
			blog.style.opacity = '1';
			blog.style.visibility = 'visible';
			
			// Check blog dimensions
			var blogHeight = window.getComputedStyle(blog).height;
			console.log('blog element height:', blogHeight);
		}
		
		// Final check - ensure blog-header isn't taking all the space
		var blogHeader = document.querySelector('.blog-header');
		if (blogHeader) {
			var headerHeight = window.getComputedStyle(blogHeader).height;
			console.log('blog-header height:', headerHeight);
			
			// If header is taking full viewport, fix it
			if (parseInt(headerHeight) >= window.innerHeight - 50) {
				console.log('blog-header taking too much space, adjusting');
				blogHeader.style.height = '50vh';
			}
		}
	}, 2000);
})();
</script>

