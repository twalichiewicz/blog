<script>
	// Inline loading screen management - runs immediately
	(function() {
		var isLoadingComplete = false;
		
		// Check for debug mode
		var urlParams = new URLSearchParams(window.location.search);
		var debugLoading = urlParams.get('debug-loading') === 'true';
		var loadingDelay = debugLoading ? 5000 : 1500;
		
		// Log loading screen presence
		console.log('Loading screen initialized:', {
			debugMode: debugLoading,
			delay: loadingDelay + 'ms'
		});

		function hideLoadingScreen() {
			if (isLoadingComplete) return;
			isLoadingComplete = true;

			console.log('Hiding loading screen...');
			
			// Show body content
			document.body.classList.add('loaded');
			console.log('Added loaded class to body:', document.body.classList);
			
			// Hide loading screen - try multiple methods
			var loadingScreen = window._loadingScreen || document.querySelector('.loading-screen');
			
			if (loadingScreen) {
				console.log('Found loading screen, forcing hide');
				// Use multiple inline styles to ensure it's hidden
				loadingScreen.style.cssText = 'display: none !important; opacity: 0 !important; visibility: hidden !important; pointer-events: none !important;';
				
				// Also try to remove it entirely after a short delay
				setTimeout(function() {
					try {
						if (loadingScreen && loadingScreen.parentNode) {
							loadingScreen.parentNode.removeChild(loadingScreen);
							console.log('Loading screen removed from DOM');
						}
					} catch (e) {
						console.error('Error removing loading screen:', e);
					}
				}, 100);
			} else {
				console.error('Loading screen not found!');
				// Try one more time with a different selector
				var allDivs = document.querySelectorAll('div');
				for (var i = 0; i < allDivs.length; i++) {
					if (allDivs[i].className && allDivs[i].className.indexOf('loading-screen') !== -1) {
						console.log('Found loading screen via fallback');
						allDivs[i].style.cssText = 'display: none !important;';
					}
				}
			}
			
			// Force visibility of main content
			var blog = document.querySelector('.blog');
			if (blog) {
				blog.style.opacity = '1';
				blog.style.visibility = 'visible';
				blog.style.display = 'block';
				console.log('Forced blog visibility');
			}
			
			// Also force skip navigation
			var skipNav = document.querySelector('.skip-navigation');
			if (skipNav) {
				skipNav.style.opacity = '1';
				skipNav.style.visibility = 'visible';
			}
			
			// Remove any potential overlay issues
			document.body.style.overflow = 'auto';
			document.body.style.position = 'static';
		}
		
		// Store function globally for other scripts to call
		window.hideLoadingScreen = hideLoadingScreen;

		// Wait for DOM to be fully loaded before considering hiding
		document.addEventListener('DOMContentLoaded', function() {
			if (debugLoading) {
				console.log('DEBUG MODE: Loading screen will stay visible for 5 seconds');
				setTimeout(hideLoadingScreen, loadingDelay);
			} else {
				console.log('DOM loaded, will wait for window.load event...');
			}
		});

		window.addEventListener('load', function() {
			console.log('Window load event fired');
			// Mark complete stage
			if (window.stages) {
				window.stages.complete = true;
				if (window.updateProgress) {
					window.updateProgress();
				}
			}
			
			// Fallback: Complete progress bar directly
			var progressBar = document.getElementById('loadingProgress');
			if (progressBar) {
				progressBar.style.width = '100%';
			}
			
			if (!debugLoading) {
				console.log('Window loaded, hiding loading screen...');
				setTimeout(hideLoadingScreen, 800);
			}
		});

		// Safety fallback
		setTimeout(function() {
			if (debugLoading) {
				console.log('Debug mode complete, hiding loading screen...');
			} else {
				console.log('Safety timeout, forcing loading screen to hide...');
			}
			hideLoadingScreen();
		}, debugLoading ? 6000 : 3000);

		// Handle browser back/forward
		window.addEventListener('pageshow', function(event) {
			if (event.persisted) {
				console.log('Page from cache, hiding loading screen immediately...');
				hideLoadingScreen();
			}
		});
	})();
</script>

<script>
