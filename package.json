{
  "name": "thomas.design blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "hexo clean && hexo generate",
    "build:prod": "hexo clean && hexo generate && npm run optimize",
    "optimize": "npm run optimize:images && npm run minify",
    "optimize:images": "node tools/optimize-images.js",
    "minify": "node scripts/minify-assets.js",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "analyze": "du -sh public/ && find public -name '*.js' -o -name '*.css' | xargs wc -c | tail -1",
    "lint:scss": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss",
    "lint:scss:fix": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss --fix",
    "lint:scss:report": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss --custom-formatter node_modules/stylelint-formatter-html --output-file stylelint-report.html",
    "test:css": "node test-css-borders.js",
    "test:build": "npm run build:prod && npm run test:css",
    "screenshot": "node tools/screenshot-automation.js",
    "screenshot:mobile": "node tools/screenshot-automation.js --viewport mobile",
    "screenshot:tablet": "node tools/screenshot-automation.js --viewport tablet",
    "screenshot:desktop": "node tools/screenshot-automation.js --viewport desktop",
    "visual:diff": "node tools/visual-diff.js",
    "visual:baseline": "npm run screenshot && mv screenshots/$(ls -t screenshots | head -1) screenshots/baseline",
    "visual:test": "npm run screenshot && node tools/visual-diff.js screenshots/baseline screenshots/$(ls -t screenshots | head -1)",
    "audit:a11y": "echo 'Accessibility audit needs implementation'",
    "check:contrast": "echo 'Color contrast check needs implementation'"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "@hapi/hoek": "^11.0.4",
    "ajv": "^8.17.1",
    "braces": "^3.0.3",
    "chart.js": "^4.5.0",
    "hawk": "^9.0.2",
    "hexo": "^7.3.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-lazyload-image": "^1.0.9",
    "hexo-math": "^5.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^7.0.1",
    "hexo-renderer-sass": "^0.5.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-theme-landscape": "^1.1.0",
    "highlight.js": "^11.11.1",
    "minimatch": "^3.1.2",
    "pdfjs-dist": "^5.3.31",
    "tough-cookie": "^5.1.2",
    "two.js": "^0.8.16",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "minimatch": "^3.1.2",
    "braces": "^3.0.3",
    "hoek": "@hapi/hoek@^11.0.4",
    "tough-cookie": "^5.1.2",
    "hawk": "^9.0.2",
    "ajv": "^8.17.1",
    "uuid": "^9.0.1",
    "micromatch": "^4.0.8",
    "request": "^2.88.2"
  },
  "notes": "All vulnerabilities have been addressed by removing hexo-admin and hexo-pdf, and replacing hoek with @hapi/hoek.",
  "devDependencies": {
    "chalk": "^4.1.2",
    "clean-css": "^5.3.3",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^23.11.1",
    "sharp": "^0.34.2",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-formatter-html": "^1.0.1",
    "terser": "^5.43.0"
  }
}
