{
  "name": "thomas.design blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:demos && hexo clean && hexo generate",
    "build:full": "npm run build:demos && npm run build",
    "build:prod": "npm run pre-deploy && npm run build:demos && hexo clean && hexo generate && npm run optimize",
    "build:prod:strict": "npm run pre-deploy && npm run build:demos && hexo clean && hexo generate && npm run optimize",
    "pre-deploy": "node build-system/pre-deploy-check.js",
    "pre-deploy:force": "node build-system/pre-deploy-check.js --force",
    "optimize": "npm run optimize:images && npm run minify",
    "sync-cursors": "node scripts/sync-cursors.js",
    "sync-cursors:watch": "node scripts/sync-cursors.js --watch",
    "optimize:images": "node tools/optimize-images.js",
    "minify": "node scripts/minify-assets.js",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "dev": "node build-system/dev-command.js",
    "dev:legacy": "concurrently \"npm run sync-cursors:watch\" \"hexo server\"",
    "health": "node build-system/health-dashboard.js",
    "doctor": "node build-system/self-healing-simple.js",
    "fix": "node build-system/self-healing-simple.js --fix",
    "analyze": "du -sh public/ && find public -name '*.js' -o -name '*.css' | xargs wc -c | tail -1",
    "lint:scss": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss",
    "lint:scss:fix": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss --fix",
    "lint:scss:report": "stylelint \"themes/san-diego/source/styles/**/*.scss\" --custom-syntax postcss-scss --custom-formatter node_modules/stylelint-formatter-html --output-file stylelint-report.html",
    "test:css": "node test-css-borders.js",
    "test:build": "npm run build:prod && npm run test:css",
    "screenshot": "node tools/screenshot-automation.js",
    "screenshot:mobile": "node tools/screenshot-automation.js --viewport mobile",
    "screenshot:tablet": "node tools/screenshot-automation.js --viewport tablet",
    "screenshot:desktop": "node tools/screenshot-automation.js --viewport desktop",
    "visual:diff": "node tools/visual-diff.js",
    "visual:baseline": "npm run screenshot && mv screenshots/$(ls -t screenshots | head -1) screenshots/baseline",
    "visual:test": "npm run screenshot && node tools/visual-diff.js screenshots/baseline screenshots/$(ls -t screenshots | head -1)",
    "audit:a11y": "echo 'Accessibility audit needs implementation'",
    "check:contrast": "echo 'Color contrast check needs implementation'",
    "build:demos": "node demos/build-scripts/build-all-demos.js",
    "build:demos:force": "node demos/build-scripts/build-all-demos.js --skip-validation",
    "dev:demos": "node demos/build-scripts/watch-demos.js",
    "validate:demos": "node demos/build-scripts/validate-demo-standards-v2.js",
    "validate:demos:legacy": "node demos/build-scripts/validate-demo-standards.js",
    "create:demo": "node demos/build-scripts/create-demo.js",
    "validate:content": "node tools/validate-content.js",
    "test": "node build-system/test-command.js",
    "test:legacy": "node test-scripts/comprehensive-test.js",
    "test:old": "npm run validate:demos && npm run build:full && npm run server",
    "test:quick": "node test-scripts/quick-test.js",
    "test:dev": "node test-scripts/quick-test.js --no-build",
    "test:comprehensive": "node test-scripts/comprehensive-test.js",
    "test:content": "npm run validate:content && npm run validate:demos",
    "test:autofix": "node demos/build-scripts/test-with-autofix.js",
    "test:autofix:demos": "node demos/build-scripts/test-with-autofix.js demo-standards",
    "install:demos": "node test-scripts/install-demo-deps.js",
    "install:demos:force": "node test-scripts/install-demo-deps.js --force",
    "fix:demos": "node demos/build-scripts/auto-fix-with-claude.js",
    "build:status": "node build-system/build-utils.js status",
    "build:clear-cache": "node build-system/build-utils.js clear-cache",
    "build:install-deps": "node build-system/build-utils.js install-deps",
    "build:all": "node build-system/build-utils.js build-all",
    "fix:sass-warnings": "node tools/fix-sass-warnings.js"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "@hapi/hoek": "^11.0.4",
    "ajv": "^8.17.1",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "braces": "^3.0.3",
    "chart.js": "^4.5.0",
    "cli-table3": "^0.6.5",
    "hawk": "^9.0.2",
    "hexo": "^7.3.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-lazyload-image": "^1.0.9",
    "hexo-math": "^5.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^7.0.1",
    "hexo-renderer-sass": "^0.5.0",
    "hexo-server": "^3.0.0",
    "hexo-theme-landscape": "^1.1.0",
    "hexo-util": "^3.3.0",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^3.1.2",
    "ora": "^8.2.0",
    "sass": "^1.89.2",
    "tough-cookie": "^5.1.2",
    "two.js": "^0.8.16",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "minimatch": "^3.1.2",
    "braces": "^3.0.3",
    "hoek": "@hapi/hoek@^11.0.4",
    "tough-cookie": "^5.1.2",
    "hawk": "^9.0.2",
    "ajv": "^8.17.1",
    "uuid": "^9.0.1",
    "micromatch": "^4.0.8",
    "request": "^2.88.2"
  },
  "notes": "All vulnerabilities have been addressed by removing hexo-admin and hexo-pdf, and replacing hoek with @hapi/hoek.",
  "devDependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "clean-css": "^5.3.3",
    "concurrently": "^9.2.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.11.1",
    "sharp": "^0.34.2",
    "stylelint": "^16.21.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-formatter-html": "^1.0.1",
    "terser": "^5.43.0"
  }
}
