/**
 * Demo Custom Cursor System
 * Import this file in your demo to get custom cursors
 * @import '@portfolio/demo-shared/styles/demo-cursors.css';
 */

:root {
  /* Default cursor - arrow (base64 encoded) */
  --cursor-default: url('data:image/svg+xml;base64,') 4 4, default;
  
  /* Pointer cursor - arrow with blue dot (base64 encoded) */
  --cursor-pointer: url('data:image/svg+xml;base64,') 4 4, pointer;
  
  /* Text cursor */
  --cursor-text: text;
  
  /* Active/pressed state (base64 encoded) */
  --cursor-active: url('data:image/svg+xml;base64,') 4 4, pointer;
  
  /* Disabled cursor (base64 encoded) */
  --cursor-disabled: url('data:image/svg+xml;base64,') 12 12, not-allowed;
  
  /* Help cursor */
  --cursor-help: help;
  
  /* Loading cursor (base64 encoded) */
  --cursor-loading: url('data:image/svg+xml;base64,') 12 12, wait;
  
  /* Grab cursor (base64 encoded) */
  --cursor-grab: url('data:image/svg+xml;base64,') 12 12, grab;
  
  /* Grabbing cursor (base64 encoded) */
  --cursor-grabbing: url('data:image/svg+xml;base64,') 12 12, grabbing;
}

/* Apply custom cursors to all elements */
* {
  cursor: var(--cursor-default) !important;
}

/* Interactive elements */
a,
button,
.button,
[role="button"],
[role="link"],
.clickable,
input[type="submit"],
input[type="button"],
input[type="reset"],
label[for],
select {
  cursor: var(--cursor-pointer) !important;
}

a:active,
button:active,
.button:active,
[role="button"]:active {
  cursor: var(--cursor-active) !important;
}

/* Text inputs */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="search"],
input[type="tel"],
input[type="url"],
textarea,
[contenteditable="true"],
.editable {
  cursor: var(--cursor-text) !important;
}

/* Disabled elements */
[disabled],
.disabled,
[aria-disabled="true"],
button:disabled,
input:disabled,
select:disabled,
textarea:disabled {
  cursor: var(--cursor-disabled) !important;
  opacity: 0.6;
}

/* Draggable elements */
[draggable="true"],
.draggable,
.sortable-item,
.resize-handle {
  cursor: var(--cursor-grab) !important;
}

[draggable="true"]:active,
.draggable:active,
.dragging {
  cursor: var(--cursor-grabbing) !important;
}

/* Loading states */
.loading,
.is-loading,
[aria-busy="true"],
.spinner {
  cursor: var(--cursor-loading) !important;
}

/* Help elements */
abbr[title],
.tooltip-trigger,
.help-icon {
  cursor: var(--cursor-help) !important;
}

/* Code blocks */
pre,
code,
.code-editor {
  cursor: var(--cursor-text) !important;
}

/* Images */
img.zoomable,
.image-zoom,
.lightbox-trigger {
  cursor: var(--cursor-pointer) !important;
}

/* Ensure html and body have cursor */
html,
body {
  cursor: var(--cursor-default) !important;
}