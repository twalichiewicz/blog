#!/bin/bash
# Auto-run when Claude enters this directory

echo "ğŸ¤– Claude Code Session Started"
echo "ğŸ“‚ Repository: $(basename $(pwd))"
echo ""

# Check if we're in a git repository
if [ -d ".git" ]; then
    echo "ğŸ” Checking current git branch..."
    CURRENT_BRANCH=$(git branch --show-current)
    
    if [ "$CURRENT_BRANCH" = "main" ]; then
        echo ""
        echo "âš ï¸  WARNING: You are on the MAIN branch!"
        echo "ğŸ›‘ DO NOT make changes here. Use a feature branch or worktree."
        echo ""
        echo "Run 'npm run check-branch' to create a safe working environment."
        echo ""
    else
        echo "âœ… Safe to work - Current branch: $CURRENT_BRANCH"
        echo ""
    fi
    
    # Show worktree status
    echo "ğŸ“ Active worktrees:"
    git worktree list | head -5
    echo ""
fi

echo "ğŸš€ Quick commands:"
echo "   npm run check-branch  # Ensure safe branch"
echo "   npm run dev          # Start development"
echo "   npm run build        # Test build"
